		<include name="**/*.jar"/>
	</fileset>		
	<fileset dir="${portal.lib}">
		<include name="**/*.jar"/>
	</fileset>		
	<fileset dir="${nds.war}/WEB-INF/lib">
		<include name="**/*.jar"/>
	</fileset>
</path>

